<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <system>
            <hryvinskyi_email_log>
                <email_logging_enabled>0</email_logging_enabled>
                <logging_errors_enabled>1</logging_errors_enabled>
                <save_email_content_enabled>1</save_email_content_enabled>
                <email_log_sent_ttl>30</email_log_sent_ttl>
                <email_log_failed_ttl>90</email_log_failed_ttl>
            </hryvinskyi_email_log>
        </system>
    </default>
</config>
